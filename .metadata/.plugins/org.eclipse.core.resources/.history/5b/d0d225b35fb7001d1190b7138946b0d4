package lesson016.interfaceUygulama;

public class Main {

	// Kütüphane uygulaması yapalım
	// Kitap sınıfımız olsun
	// isim, yazar, fiyat attributes

	// Kutuphane: isim, Kitaplar

	// IKutuphaneManaher diye bir interface oluşturalım
	// interface'e kitapEkle() metodu yazalım

	// Util sınıfı oluşturalım
	// intDegerAl()
	// stringDegerAl()
	
	// Kullanıcıdan aldığımız isim, yazar, fiyatla bir kitap nesnesi oluşturalım
	
	
	public static void adminMenu() {
		while (true) {
			System.out.println("1 - Kitap Ekle");
			int secim = Util.intDegerAl("Seçiminiz:");
			
			switch (secim) {
			case 1:
				System.out.println("deneme");
				break;

			default:
				break;
			}
		}
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Kitap kitap1 = new Kitap("Pal Sokağı Çocukları", "Ferenc Molnar", 15.81);
		Kitap kitap2 = new Kitap("Fareler ve İnsanlar", "John Steinbeck", 42.90);
		Kitap kitap3 = new Kitap("Şeker Portakalı", "Jose Mauro De Vasconcelos", 30.31);
		Kitap kitap4 = new Kitap("Kırmızı Pazartesi", "Gabriel Garcia Marquez", 21.12);
		Kitap kitap5 = new Kitap("Simyacı", "Paulo Coelho", 42.07);
		Kitap kitap6 = new Kitap("Nietzsche Ağladığında", "Irvin D. Yalom", 97.99);

		
		int sayi = Util.intDegerAl("Lütfen sayı girin: ");
		String isim = Util.stringDegerAl("Lütfen değer girin: ");
		
		adminMenu();
	}

}
