package homework2_24022023;

public class Lig {

	private String ligAdi;
	private Takim[] takimlarArray;
	private int takimSayisi;

	public void takimEkle(String name) {
		Takim takim = new Takim();
		takim.setName(name);
		this.takimlarArray[this.takimSayisi] = takim;
		takimSayisi++;
	}

	public String getLigAdi() {
		return ligAdi;
	}

	public void setLigAdi(String ligAdi) {
		this.ligAdi = ligAdi;
	}

	public Takim[] getTakimlarArray() {
		return takimlarArray;
	}

	public void setTakimlarArray(Takim[] takimlarArray) {
		this.takimlarArray = takimlarArray;
	}

	public int getTakimSayisi() {
		return takimSayisi;
	}

	public void setTakimSayisi(int takimSayisi) {
		this.takimSayisi = takimSayisi;
	}

}
