package lesson009;

import java.util.Scanner;

public class Question66 {
	// menüyü oluşturalım
	// toplama metodu: kullanıcıdan 0 girene kadar sayıları alıyoruz, 0 girince
	// sonucu gösterip menüye dönüyoruz

	private static void menuyuGoster() {
		boolean kontrol = true;
		while (kontrol) {
			System.out.println("1-Toplama işlemi");
			Scanner scanner = new Scanner(System.in);
			int secim = scanner.nextInt();
			scanner.nextLine();
			switch (secim) {
			case 1:
				toplama();
				break;

			default:
				System.out.println("geçerli sayı giriniz");
				break;
			}
		}
		
		
		System.out.println("--------");
		

	}

	private static void toplama() {
		int sayi = Integer.MAX_VALUE;
		int toplam = 0;

		do {
			System.out.println("sayı girin: ");
			Scanner scanner = new Scanner(System.in);
			sayi = scanner.nextInt();
			toplam += sayi;
		} while (sayi != 0);
		System.out.println("sıfıra kadar girilen sayıların toplamı: " + toplam);
		menuyuGoster();
	}

	public static void main(String[] args) {
		menuyuGoster();
		toplama();

	}

}
