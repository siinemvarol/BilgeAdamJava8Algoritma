package lesson012;

public class Pizza {
	
	private int price;
	private boolean vejeteryanMi;
	
	
	public Pizza(boolean vejeteryanMi) {
		this.price = setPrice();
		this.vejeteryanMi = vejeteryanMi;
	}

	public int getPrice() {
		return price;
	}

	public void setPrice(int price) {
		this.price = price;

	}


	public boolean isVejeteryanMi() {
		return vejeteryanMi;
	}


	public void setVejeteryanMi(boolean vejeteryanMi) {
		this.vejeteryanMi = vejeteryanMi;
	}

	@Override
	public String toString() {
		return "Pizza [price=" + price + ", vejeteryanMi=" + vejeteryanMi + "]";
	}
	
	
	
	
	
	
	
}
