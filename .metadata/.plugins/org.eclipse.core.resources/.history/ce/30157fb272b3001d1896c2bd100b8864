package lesson014;

public class UserManager {
	
	private String mailAdresi;
	
	public UserManager() {
		
	}	
	
	public UserManager (String mailAdresi, User user) {
		mailAdresi = user.getName() + "." + user.getSurname() + "@xbank.com";
		this.mailAdresi = mailAdresi;
	}

	public String getMailAdresi() {
		return mailAdresi;
	}

	public void setMailAdresi(String mailAdresi) {
		this.mailAdresi = mailAdresi;
	}
	

}
