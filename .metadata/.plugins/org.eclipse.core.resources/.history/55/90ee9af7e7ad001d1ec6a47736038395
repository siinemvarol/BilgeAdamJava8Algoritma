	private static void illeriBul(String[] array, char harf) {
		for (int i = 0; i < iller.length; i++) {
			if (iller[i].charAt(1) == harf) {
				for (int j = 0; j < 3; j++) {
	//				System.out.print(iller[i].charAt(j).toUpperCase());
				}
				System.out.println();

			}
		}

	}

	public static void main(String[] args) {

		illeriBul(iller, 'a');
		
		plakaBul(iller, "Tekirdağ");

	}
	
	// plakaBul(iller, "Ankara", "Karaman");
	// parametre olarak array ve sınırsız sayıda String olarak şehir alsın
	// girilen şehirlerin plakalarını yazdırsın

	private static void plakaBul(String[]array, String şehir) {
		for (int i = 0; i < array.length; i++) {
			if (array[i].equals(şehir)) {
				System.out.println("plaka: " + (i+1));
			}
		}
		
	}
	

	

}
