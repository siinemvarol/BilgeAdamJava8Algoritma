package lesson007;

public class Question54 {

	public static void main(String[] args) {
		// verilen dizide rakamların farkının en az olduğu sayıların farkını bulalım
		
		int[] array = { 1, -10, -4, 3 };
		
		//mutlak değer alabiliriz
		int mutlakDeger = Math.abs(-4);
		
		int[] fark = new int[array.length];
		
		boolean condition = true;
		
		while (condition) {
			for (int i = 0; i < array.length; i++) {
				if (i != array.length-1) {
					fark[i] = Math.abs(array[i] - array [i+1]); 
				}
				else if (i == array.length-1) {
					condition = false;
				}
			}
		}
		
		for (int i = 0; i < fark.length; i++) {
			System.out.println(fark[i]);
		}
		
		int maximum = fark[0];
		System.out.println();
		
		for (int i = 0; i < fark.length; i++) {
			if (fark[i] > maximum) {
				maximum = fark[i];
			}
			
		}
		System.out.println("Maximum fark: " + maximum);

	}

}
