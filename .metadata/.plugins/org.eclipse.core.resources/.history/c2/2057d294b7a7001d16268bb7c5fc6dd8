package lesson007;

public class Question59 {
	
	private static void tekSayilariBulma(int[][] matris) {
		int[] tekSayilarArrayi = new int [matris.length*matris[0].length];
		int tekSayilarKacTane = 0;
		for (int i = 0; i < matris.length; i++) {
			for (int j = 0; j < matris[i].length; j++) {
				if (matris[i][j] % 2 == 1) {
					tekSayilarArrayi[tekSayilarKacTane] = matris[i][j];
					}
				tekSayilarKacTane ++;
			}
		}
		for (int i = 0; i < tekSayilarArrayi.length; i++) {
			System.out.println(tekSayilarArrayi[0]);
		}
	}

	public static void main(String[] args) {
		// 1. metod: parametre olarak array alacak. aldığı dizideki tek elemanları farklı bir diziye atacak
		// 2. metod: tek sayıların olduğu diziyi ekrana yazdıracak
		
		int[][] matris = { { 56, 23, 678, 231, 5 }, { 234, 21, 78, 26, 6 }, { 654, 33, 32, 67, 2 }, { 189, 35, 56, 89, 8 } };
		
		tekSayilariBulma(matris);

	}



}
