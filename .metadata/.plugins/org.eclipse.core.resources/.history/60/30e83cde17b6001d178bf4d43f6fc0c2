package homework1_24022023;

public class Main {

	// Maaş, Vergi, Bonus, Maaş artımı hesaplayan bir program
	// Sınıfın attributeları: name, salary, workHours (çalıştığı saat),
	// hireYear (işe giriş yılı), tax (vergi), bonus (mesai ücreti), 
	// salaryRaise (maaş artırımı)
	//
	// tax metodu --> eğer çalışanın maaşı 2000 tl'den az ise vergi uygulanmayacak,
	// 					fazla ise maaşının %5'i kadar vergisi olacak
	// bonus metodu --> eğer haftada 40 saatten fazla çalıştıysa çalıştığı saat
	// 					başına 30 tl maaşa bonus uygulanacak
	// 					ve ne kadar bonus aldığı hesaplanacak
	// raiseSalary --> işe girdiği yıla göre maaş artışı yapılacak. şu anki yıl
	// 					2023, 10 yıldan az ise %5, 10-20 yıl arasında %10, 
	//					20 yıldan fazla ise %15 zam yapılacak

	public static void main(String[] args) {
		EmployeeManager employeeManager = new EmployeeManager();
		Employee employee1 = new Employee("Ahmet", 3000F, 65F, 1995);
		System.out.println("- Employee 1 -");
		System.out.println("Name: " + employee1.getName());
		System.out.println("Salary: " + employee1.getSalary());
		System.out.println("Working hours: " + employee1.getWorkHours());
		System.out.println("Hire year: " + employee1.getHireYear());
		employeeManager.tax(employee1);
		System.out.println("Tax: " + employee1.getTax());
		employeeManager.bonus(employee1);
		System.out.println("Bonus: " + employee1.getBonus());
		employeeManager.raiseSalary(employee1);
		System.out.println("Salary raise: " + employee1.getSalaryRaise());
		System.out.println("- - - - -");
		System.out.println("Salary with taxes and bonuses: " + employeeManager.salaryUpdated(employee1));
		System.out.println("Final salary with raise added: " + employeeManager.finalSalary(employee1)); 
		System.out.println("- - - - -");
		

	}

}
