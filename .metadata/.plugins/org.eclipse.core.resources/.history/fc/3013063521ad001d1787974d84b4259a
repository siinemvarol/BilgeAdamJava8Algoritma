package lesson009;

import java.util.Scanner;

public class Question66 {
	// menüyü oluşturalım

	// toplama metodu: kullanıcıdan 0 girene kadar sayıları alıyoruz, 0 girince
	// sonucu gösterip menüye dönüyoruz

	// çıkarma metodu: kullanıcıdan kaç tane sayı gireceğimizi alalım
	// program girilen sayı kadar sayı girilmesini istyecek
	// sayıları çıkartıp sonucu verecek

	private static void menuyuGoster() {
		boolean kontrol = true;
		while (kontrol) {
			System.out.println("------Menü------");
			System.out.println("1-Toplama işlemi");
			System.out.println("2-Çıkarma işlemi");
			System.out.println("Seçiminiz: ");
			Scanner scanner = new Scanner(System.in);
			int secim = scanner.nextInt();
			scanner.nextLine();
			switch (secim) {
			case 1:
				toplama();
				break;
			case 2:
				cikarma();
				break;

			default:
				System.out.println("geçerli sayı giriniz");
				break;
			}
		}

		System.out.println("--------");

	}

	private static void toplama() {
		int sayi = Integer.MAX_VALUE;
		int toplam = 0;

		do {
			System.out.println("sayı girin: ");
			Scanner scanner = new Scanner(System.in);
			sayi = scanner.nextInt();
			toplam += sayi;
		} while (sayi != 0);
		System.out.println("sıfıra kadar girilen sayıların toplamı: " + toplam);
		menuyuGoster();
	}

	private static void cikarma() {
		int cikarmaSonucu = 0;
		System.out.println("kaç adet sayı çkarmak istiyorsunuz: ");
		Scanner scanner = new Scanner(System.in);
		int sayiAdedi = scanner.nextInt();
		for (int i = 0; i < sayiAdedi; i++) {
			System.out.println("sayı girin: ");
			int sayi = scanner.nextInt();
			cikarmaSonucu -= sayi;
		}
		System.out.println("Çıkarma sonucu: " + cikarmaSonucu);
		menuyuGoster();

	}

	public static void main(String[] args) {
		menuyuGoster();
		toplama();

	}

}
