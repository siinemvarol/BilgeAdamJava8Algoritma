package lesson014;

import java.util.Scanner;

public class Account {

	private int accountNo;
	private int money;

	public Account(int accountNo, int money) {
		super();
		this.accountNo = accountNo;
		this.money = money;
	}

	public int getAccountNo() {
		return accountNo;
	}

//	public void setAccountNo(int accountNo) {
//		this.accountNo = accountNo;
//	}

	public int getMoney() {
		return money;
	}

	public void setMoney(int money) {
		this.money = money;
	}
	
	public void paraYatir() {
		Scanner scanner = new Scanner(System.in);
		System.out.println("Kaç para yatırmak istediğinizi girin: ");
		int yatirilanPara = Integer.parseInt(scanner.nextLine());
		if (yatirilanPara <= 10000) {
			setMoney(getMoney() + yatirilanPara);
			System.out.println(yatirilanPara + " TL hesabınıza yatırıldı. Hesap bakiyesi: " + getMoney());
		}
		else {
			System.out.println("En fazla 10.000 TL yatırabilirsiiz.");
		}
		
	}
	
	public void paraCek() {
		
	}

}
